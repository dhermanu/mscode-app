<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:gravity="center">
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/my_button"
                android:textAllCaps="false"
                style="@style/CustomTheme.ButtonTextAppearance"
                android:textColor="#FFFFFF"
                android:text="@string/button_toMorse"
                android:onClick="encode" />

            <View
                android:layout_height="0dp"
                android:layout_width="35dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_button_gray"
                android:textAllCaps="false"
                style="@style/CustomTheme.ButtonTextAppearance"
                android:textColor="#FFFFFF"
                android:text="@string/button_toCharacter"
                android:onClick="decode" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="input:"/>

    <EditText
        android:id="@+id/edit_message_toMorse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:ellipsize="none"
        android:maxLength="150"
        android:maxLines="10"
        android:singleLine="true"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:gravity="top|left"
        android:hint="Enter Text: \n\n(max: 150 characters)\n\n"
    />

    <TableLayout
        android:paddingTop="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <TableRow>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/lightbulb"
                android:onClick="light" />

            <!-- USE: when ads are removed
            <View
                android:layout_height="0dp"
                android:layout_width="50dp" />
            -->

            <!-- Remove when ads are removed -->
            <View
                android:layout_height="0dp"
                android:layout_width="10dp" />

            <TextView
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dip"
                android:gravity="center"
                android:background="@drawable/textview_rounded_corner"
                android:textColor="#ff3aff52"
                android:text="Purchase this App on the Play Store to support it."
                />

            <!-- Remove when ads are removed -->
            <View
                android:layout_height="0dp"
                android:layout_width="10dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/alarm"
                android:onClick="sound" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="output:"/>


        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:ellipsize="none"
            android:maxLines="50"
            android:textIsSelectable="true"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:hint="'?' indicates an untranslatable character."
            />

</LinearLayout>
